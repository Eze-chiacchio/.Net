@model IEnumerable<TestBiblioteca3.Models.Alquiler>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Inicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.libro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.libro.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.usuario.IdUser)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAlquiler">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAlquiler">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAlquiler">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
